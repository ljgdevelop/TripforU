<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/BG_TopLeft"
        android:width="100dp"
        android:height="100dp"
        android:gravity="top|left">
        <vector
            android:height="100dp"
            android:viewportHeight="50"
            android:viewportWidth="50"
            android:width="100dp">
            <path
                android:fillColor="@color/white"
                android:pathData="M0,5 C2,5 5,2 5,0 L5,5 L0,5z"/>
        </vector>
    </item>

    <item
        android:id="@+id/BG_TopRight"
        android:width="100dp"
        android:height="100dp"
        android:gravity="top|right">
        <vector
            android:height="100dp"
            android:viewportHeight="50"
            android:viewportWidth="50"
            android:width="100dp">
            <path
                android:fillColor="@color/white"
                android:pathData="M45,0 C45,2 48,5 50,5 L50,5 L45,5z"/>
        </vector>
    </item>

    <item
        android:id="@+id/BG_BottomRight"
        android:width="100dp"
        android:height="100dp"
        android:gravity="bottom|right">
        <vector
            android:height="100dp"
            android:viewportHeight="50"
            android:viewportWidth="50"
            android:width="100dp">
            <path
                android:fillColor="@color/white"
                android:pathData="M50,45 C48,45 45,48 45,50 L45,50 L45,45z"/>
        </vector>
    </item>

    <item
        android:id="@+id/BG_BottomLeft"
        android:width="100dp"
        android:height="100dp"
        android:gravity="bottom|left">
        <vector
            android:height="100dp"
            android:viewportHeight="50"
            android:viewportWidth="50"
            android:width="100dp">
            <path
                android:fillColor="@color/white"
                android:pathData="M5,50 C5,48 2,45 0,45 L5,45z"/>
        </vector>
    </item>

    <item
        android:id="@+id/BG_Center"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"
        android:left="10dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:id="@+id/BG_Top"
        android:gravity="top"
        android:height="10dp"
        android:left="10dp"
        android:right="10dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:id="@+id/BG_Right"
        android:gravity="right"
        android:width="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:id="@+id/BG_Bottom"
        android:gravity="bottom"
        android:height="10dp"
        android:left="10dp"
        android:right="10dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:id="@+id/BG_Left"
        android:gravity="left"
        android:width="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape>
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:id="@+id/BG_Perforation"
        android:height="3dp"
        android:gravity="bottom"
        android:left="10dp"
        android:right="10dp">
        <shape android:shape="line">

            <stroke
                android:color="#8DD7DDE9"
                android:dashWidth="10dp"
                android:dashGap="10dp"
                android:width="2dp"/>
        </shape>
    </item>
</layer-list>