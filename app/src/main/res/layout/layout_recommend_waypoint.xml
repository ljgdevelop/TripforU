<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="32dp"
    android:layout_marginVertical="8dp"
    android:elevation="8dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/IMG_Recommend_WP_Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:visibility="visible"
            android:src="@drawable/ic_waypoint_pin" />

        <TextView
            android:id="@+id/TEXT_Recommend_WP_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="16"
            android:text="@string/lorem"
            android:textSize="18sp"
            android:textColor="@color/TEXT_Black"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/IMG_Recommend_WP_Img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/ic_tempimage"
        android:scaleType="centerCrop"
        android:elevation="8dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/TEXT_Recommend_WP_Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:background="@color/white"
        android:padding="16dp"
        android:textColor="@color/TEXT_Black"
        android:textSize="14sp"
        android:text="@string/lorem"/>
</LinearLayout>