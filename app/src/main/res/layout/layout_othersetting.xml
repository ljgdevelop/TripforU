<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/APP_Accent"
    tools:context=".othersetting"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="이동수단을 선택해 주세요"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:id="@+id/textview1"
                />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/btnCar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_othersetting_left"
                        android:padding="10dp"
                        android:text="자가용"
                        android:textColor="@color/black"
                        >

                    </Button>

                    <Button
                        android:id="@+id/btnPublicTransport"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_ohtersetting_right"
                        android:padding="10dp"
                        android:text="대중교통"
                        android:textColor="@color/black"
                        >

                    </Button>

                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/btnBus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="버스"
                android:background="@drawable/btn_ohtersetting_checkbox"
                android:layout_marginBottom="5dp"
                android:visibility="invisible">
            </CheckBox>

            <CheckBox
                android:id="@+id/btnSubway"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_ohtersetting_checkbox"
                android:text="지하철"
                android:layout_marginBottom="5dp"
                android:visibility="invisible">

            </CheckBox>

            <CheckBox
                android:id="@+id/btnTrain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기차"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_ohtersetting_checkbox"
                android:visibility="invisible">
            </CheckBox>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="인원수를 정해해주세요"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:id="@+id/textview2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_ohtersetting_select_member"
                    android:hint="인원을 정해주세요"
                    android:maxLines="2"
                    android:digits="0123456789"
                    android:textColor="@color/TEXT_Gray"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>