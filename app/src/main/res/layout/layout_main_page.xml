<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/APP_Accent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:clipToPadding="false"
        android:paddingHorizontal="8dp"
        android:paddingTop="15dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/TEXT_WelcomeText"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TEXT_Black"
            android:textSize="24sp"
            android:text="님,"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TEXT_Black"
            android:textSize="24sp"
            android:layout_marginBottom="24dp"
            android:text="함께 여행을 떠나볼까요?"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/background_white_rcorner_8"
            android:elevation="2dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/transparent"
                android:paddingStart="16dp"
                android:textSize="16sp"
                android:hint="어디로 떠나 볼까요?"/>

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_cross"
                android:background="@color/transparent"
                android:layout_gravity="center|right"
                app:tint="@color/TEXT_Gray" />
        </FrameLayout>

        <TextView style="@style/divideLine"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TEXT_Black"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"
            android:text="남은 일정"/>

        <HorizontalScrollView
            android:id="@+id/VIEW_TicketScroll"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:clipToPadding="false"
            android:layout_marginBottom="48dp"
            android:paddingHorizontal="16dp"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="horizontal">

                <include
                    android:id="@+id/LAYOUT_SchTicket1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_main_scheduleticket"
                    android:visibility="visible"/>

                <include
                    android:id="@+id/LAYOUT_SchTicket2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_main_scheduleticket"
                    android:visibility="gone"/>

                <include
                    android:id="@+id/LAYOUT_SchTicket3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_main_scheduleticket"
                    android:visibility="gone"/>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:backgroundTint="@color/APP_Secondary"
            android:text="새 일정 추가"
            android:textStyle="bold"
            android:layout_marginBottom="56dp"
            android:elevation="2dp"
            android:layout_marginHorizontal="36dp"/>
    </LinearLayout>
</LinearLayout>