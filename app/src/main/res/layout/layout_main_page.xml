<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/APP_Accent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:paddingHorizontal="8dp"
        android:paddingTop="15dp"
        android:paddingBottom="30dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/TEXT_Black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:text="남은 여행"/>

        <HorizontalScrollView
            android:id="@+id/VIEW_TicketScroll"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:clickable="true"
            android:layout_marginBottom="48dp"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include
                    android:id="@+id/LAYOUT_SchTicket1"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    layout="@layout/layout_main_scheduleticket"
                    android:visibility="gone"/>

                <include
                    android:id="@+id/LAYOUT_SchTicket2"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    layout="@layout/layout_main_scheduleticket"
                    android:visibility="gone"/>

                <include
                    android:id="@+id/LAYOUT_SchTicket3"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    layout="@layout/layout_main_scheduleticket"
                    android:visibility="gone"/>
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/BTN_CreateNewSch"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/background_white_rcorner_8"
            android:backgroundTint="@color/APP_Secondary"
            android:text="새 일정 만들기"
            android:textSize="18sp"
            android:layout_marginBottom="72dp"
            android:padding="16dp"
            android:textColor="@color/APP_Accent"
            android:backgroundTintMode="src_over"/>
    </LinearLayout>
</LinearLayout>