<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LayoutMainPage">

    <ScrollView
        android:layout_marginTop="56dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp"
            android:paddingTop="15dp"
            android:paddingBottom="30dp">

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="남은 여행 일정"/>


            <HorizontalScrollView
                android:id="@+id/VIEW_HorizontalScroll1"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="330dp"
                android:overScrollMode="never"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@+id/LAYOUT_SchTicket1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_main_scheduleticket"
                        android:visibility="gone"
                        android:layout_marginRight="15dp"/>

                    <include
                        android:id="@+id/LAYOUT_SchTicket2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_main_scheduleticket"
                        android:visibility="gone"
                        android:layout_marginRight="15dp"/>

                    <include
                        android:id="@+id/LAYOUT_SchTicket3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_main_scheduleticket"
                        android:visibility="gone"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                android:text="지난 여행 일정"/>

            <FrameLayout
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="330dp"
                android:layout_height="150dp"
                android:layout_marginBottom="50dp">

                <ImageButton
                    android:layout_width="240dp"
                    android:layout_height="150dp"
                    android:background="@color/white"
                    android:padding="15dp"/>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:orientation="vertical"
                    android:layout_margin="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="제목 영역"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="여행 코스 영역"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="인원 수 영역"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="숙박일 수 영역"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="여행 기간 영역"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                android:text="다음 여행은 이곳이 어떠신가요?"/>

            <HorizontalScrollView
                android:id="@+id/VIEW_HorizontalScroll2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:scrollbars="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:id="@id/LAYOUT_SchTicket1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_recommend_trip_banner"
                        android:layout_marginRight="15dp"/>

                    <include
                        android:id="@id/LAYOUT_SchTicket2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_recommend_trip_banner"
                        android:layout_marginRight="15dp"/>

                    <include
                        android:id="@id/LAYOUT_SchTicket3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_recommend_trip_banner"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>