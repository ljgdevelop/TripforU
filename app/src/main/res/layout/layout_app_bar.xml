<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingVertical="6dp"
        android:background="@color/APP_Accent"
        app:titleMarginStart="16dp"
        android:weightSum="2"
        android:id="@+id/LAYOUT_AppBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/LAYOUT_AppBarDefault">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/TEXT_AppBarTittle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Trip for U"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#5e5e5e"/>

                    <TextView
                        android:id="@+id/TEXT_AppBarLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:visibility="gone"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#5e5e5e"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>


                    <ImageButton
                        android:id="@+id/IMG_AppBarRight"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/ic_search"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:layout_marginRight="16dp"/>

                    <TextView
                        android:id="@+id/TEXT_AppBarRight"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:visibility="gone"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#5e5e5e"
                        android:layout_marginRight="16dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/APP_Accent"
                android:visibility="gone"
                android:id="@+id/LAYOUT_AppBarSearch">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/IMG_AppBarGoBack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/ic_arrow_back"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:layout_marginRight="8dp"/>

                    <EditText
                        android:id="@+id/TEXT_AppBarSearchText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="검색..."
                        android:inputType="textPersonName"
                        android:textColor="#5e5e5e"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <ImageButton
                        android:id="@+id/IMG_AppBarErase"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="16dp"
                        android:background="@drawable/ic_cross"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:layout_marginRight="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.appcompat.widget.Toolbar>
</FrameLayout>