<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/FrameLayout_content"
    tools:context=".ActivityNewSchedule">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/LAYOUT_SchScroll"
        android:scrollX="720dp"
        android:scrollbars="none"
        android:overScrollMode="always">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include
                layout="@layout/layout_newsch_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <include
                layout="@layout/layout_newsch_date"/>

            <include
                layout="@layout/layout_newsch_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <include
                layout="@layout/layout_newsch_wp_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <include
                layout="@layout/layout_newsch_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>