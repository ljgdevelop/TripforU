<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/APP_Accent"
    android:orientation="vertical"
    tools:context=".LayoutAddWaypoint">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/layout_app_bar">
        </include>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="현재 일정 입니다."
                android:textSize="18dp"
                android:textColor="@color/black"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_add_edit_waypoint"
                android:gravity="left"
                android:drawableEnd="@drawable/ic_up_down_arrow"
                android:layout_marginBottom="15dp"
                android:text="달맞이동산\n1시간 2분코스"
                android:textColor="@color/black"
                android:id="@+id/btnScroll1"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_add_edit_waypoint"
                android:gravity=""
                android:drawableEnd="@drawable/ic_up_down_arrow"
                android:layout_marginBottom="15dp"
                android:text="청사포 조개구이촌\n1시간 41분코스"
                android:textColor="@color/black"
                android:id="@+id/btnScroll2"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_add_edit_waypoint"
            android:text="추가하기"
            android:textColor="@color/teal_200"
            android:id="@+id/AddButton"
            android:textSize="20dp">

        </Button>


    </LinearLayout>




    
</LinearLayout>