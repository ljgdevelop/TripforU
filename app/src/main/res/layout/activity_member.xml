<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7dde9"
    tools:context=".ActivityMember">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingVertical="15dp">

            <include
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                layout="@layout/layout_memo_summary"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="15dp">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_white_rcorner_8"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:id="@+id/TEXT_MemoTitle"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="테스트"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5e5e5e"/>

                <TextView
                    android:id="@+id/TEXT_MemoText"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:minHeight="25dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginHorizontal="15dp"
                    android:text="테스트 입니다\n2번째 줄 입니다.\n3번째 줄 입니다.\n4번째 줄 입니다."
                    android:textSize="12sp"
                    android:textColor="#5e5e5e"/>
            </LinearLayout>

            <include
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                layout="@layout/layout_memo_summary"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>