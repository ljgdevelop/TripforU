<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="150dp">

    <ImageButton
        android:id="@+id/BTN_SchTicket"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:background="@drawable/background_ticket"
        android:backgroundTint="@color/white"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/TEXT_SchTicket_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="제목 영역"/>

        <TextView
            android:id="@+id/TEXT_SchTicket_Course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="여행 코스 영역"/>

        <TextView
            android:id="@+id/TEXT_SchTicket_Count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="인원 수 영역"/>

        <TextView
            android:id="@+id/TEXT_SchTicket_Days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="숙박일 수 영역"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/TEXT_SchTicket_Date"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="여행 기간 영역"/>
    </LinearLayout>
</FrameLayout>