<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ActivityRecycleViewSchedule"
    android:background="?attr/selectableItemBackground"
    android:id="@+id/FRAMELAYOUT_RecyclerView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_white_rcorner_15"
        android:backgroundTint="@color/white"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

                <CheckBox
                    android:layout_marginLeft="10dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:background="@drawable/checkbox_customizing"
                    android:button="@null"
                    android:visibility="gone"
                    android:id="@+id/CHB_ScheduleList"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/LAYOUT_SchedulText">

            //제목
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/TEXT_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TEXT_Black"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>


            //여행코스
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/TEXT_Destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/TEXT_Black"
                    android:textSize="14sp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    //별점
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_star"/>
                        <TextView
                            android:paddingLeft="6dp"
                            android:id="@+id/TEXT_Grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/TEXT_Black"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LAYOUT_SharedContents"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom">

                    //좋아요 수
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_numberlike"/>

                        <TextView
                            android:id="@+id/TEXT_Likes"
                            android:layout_marginLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/TEXT_Black"
                            android:textSize="14sp"
                            android:layout_gravity="bottom" />
                    </LinearLayout>

                    //공유된 수
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_shared"/>

                        <TextView
                            android:id="@+id/TEXT_SharedCount"
                            android:layout_marginLeft="5dp"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/TEXT_Black"
                            android:textSize="14sp"
                            android:layout_gravity="bottom" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    //기간
                    <LinearLayout
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:id="@+id/TEXT_StartDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/TEXT_Black"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:padding="15dp"
            android:visibility="gone"
            android:id="@+id/LAYOUT_ScrollHandle">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_expand_less_24"/>
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_expand_more_24"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>