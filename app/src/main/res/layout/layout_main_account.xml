<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/APP_Accent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:paddingBottom="16dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/IMG_Profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="center"
                    android:background="@drawable/backgrount_profile"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/foreground_profile"/>
            </FrameLayout>

            <TextView
                android:id="@+id/TEXT_AccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:textSize="18sp"
                android:text=""/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BTN_GoLogout"
                android:layout_width="96sp"
                android:layout_height="44sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:textSize="14sp"
                android:textColor="#ff8888"
                android:background="@drawable/background_white_rcorner_15"
                android:visibility="gone"
                android:text="로그아웃"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BTN_GoLogin"
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:textSize="14sp"
                android:textColor="@color/APP_Main"
                android:background="@drawable/background_white_rcorner_15"
                android:visibility="visible"
                android:text="로그인"/>

            <include
                layout="@layout/layout_settingcontents"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>