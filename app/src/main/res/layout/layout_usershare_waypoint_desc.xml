<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/APP_Accent"
    android:id="@+id/LAYOUT_UserShareContentDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:id="@+id/LAYOUT_UserShare_Waypoint">
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/FRAMELAYOUT_ContentImageGroup">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/IMG_ContentImage3"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/IMG_ContentImage2"
                android:visibility="gone"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/IMG_ContentImage1"
                android:visibility="gone"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/IMGBTN_ContentImage"
                android:src="@drawable/ic_tempimage"
                android:background="#E2E2E2"/>
        </FrameLayout>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_gravity="center_vertical|left"
            android:id="@+id/IMGBTN_ContentImageLeft"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:visibility="gone"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_arrow_right"
            android:layout_gravity="center_vertical|right"
            android:id="@+id/IMGBTN_ContentImageRight"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:visibility="gone"/>
    </FrameLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="top|left"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:hint="설명을 추가해 주세요."
        android:textSize="18sp"
        android:textColor="@color/TEXT_Black"
        android:id="@+id/EDT_ContentDetailText"/>
</LinearLayout>