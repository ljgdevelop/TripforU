<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/APP_Accent">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:backgroundTint="@color/teal_700"
        android:text="설명 추가"
        app:icon="@drawable/ic_plus"
        app:iconSize="25dp"
        app:iconGravity="textStart"
        android:textColor="@color/white"
        android:layout_margin="32dp"
        app:iconTint="@color/white"
        android:layout_gravity="bottom|right"
        android:id="@+id/ACBTN_AddContent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false"
            android:elevation="4dp">

            <ImageButton
                android:layout_width="1080px"
                android:layout_height="568px"
                android:background="#E2E2E2"
                android:src="@drawable/ic_tempimagesize"
                android:id="@+id/IMGBTN_TitleImage"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"
                android:background="@color/white"
                android:clipToPadding="false"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목을 입력해주세요."
                    android:textStyle="bold"
                    android:textColor="@color/TEXT_Black"
                    android:textSize="22sp"
                    android:paddingHorizontal="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@null"
                    android:id="@+id/EDT_Title"/>

                <LinearLayout
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="#4DD7DDE9"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="top|left"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="16dp"
                    android:text="머릿글을 작성해 주세요."
                    android:textSize="18sp"
                    android:textColor="@color/TEXT_Black"
                    android:id="@+id/EDT_Content"/>

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/layout_usershare_point_disc"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>